{
  "tasks": {
    "dev": "deno run --unstable --allow-net --allow-read --allow-env --watch src/server/api.ts",
    "test": "deno test --unstable --allow-net --allow-read --allow-env",
    "build": "deno bundle --unstable src/server/api.ts dist/server.js",
    "start": "deno run --unstable --allow-net --allow-read --allow-env src/server/api.ts"
  },
  "imports": {
    "@/": "./src/",
    "ws": "npm:ws@8.14.2"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "checkJs": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler"
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}